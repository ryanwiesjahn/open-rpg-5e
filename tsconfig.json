{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types", 
      "@types"
    ],
    "declaration": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "pretty": true,
    "sourceMap": true
  },
  "exlude": [
    "node_modules",
    "@types"
  ]
}
